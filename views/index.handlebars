<div class="container">
  <img src="/assets/img/burger.png" alt="monkey">
  <h1>Eat-da-Burger!</h1>
  <div class="flexarea">
    <div class="uneaten-area">
      
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="eaten-area">

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="form-area">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input class="burger-input" type="text" id="ca" name="name">
      </div>

      <button class="add-button center" type="submit">Add Burger</button>
    </form>
  </div>
</div>